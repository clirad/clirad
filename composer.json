{
    "name": "termage/termage",
    "description": "Termage provides a fluent and powerful, object-oriented interface for customizing CLI output text color, background, formatting, and more.",
    "license": "MIT",
    "keywords": [
        "Termage", "console", "cli", "terminal"
    ],
    "support": {
      "source": "https://github.com/termage/termage",
      "issues": "https://github.com/termage/termage/issues"
    },
    "authors": [
        {
            "name": "Sergey Romanenko",
            "email": "sergey.romanenko@flextype.org",
            "homepage": "https://awilum.github.io"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "atomastic/arrays": "^3.0.5",
        "atomastic/strings": "^3.0.2",
        "atomastic/macroable": "^2.0",
        "thunderer/shortcode": "^0.7.4",
        "symfony/console": "^5.3",
        "spatie/emoji": "^3.0"
    },
    "autoload":{
        "psr-4": {
            "Termage\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "require-dev": {
        "doctrine/coding-standard": "9.0.0",
        "pestphp/pest": "^1.19.0",
        "phpstan/phpstan": "^0.12.99",
        "symfony/var-dumper": "^5.3.7"
    }
}
